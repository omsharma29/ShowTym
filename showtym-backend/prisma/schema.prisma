generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"] // ðŸ‘ˆ required for Neon in Workers
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id           String   @id @default(uuid())
  clerkId      String
  email        String
  movieName    String
  movieId      String   // âœ… new field
  City         String
  Address      String
  ShowDate     DateTime
  ShowTime     String
  totalSeat    Int
  totalPaid    Float
  bookingDate  DateTime @default(now())
  seatNos      String[]   // âœ… array of seat numbers (Postgres only)
  orderId       String
  PaymentDone  Boolean


  @@index([clerkId])
   @@index([orderId])
  @@index([email])
}
