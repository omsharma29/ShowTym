generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

generator edge {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma/edge"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model Booking {
  id           String   @id @default(uuid())
  clerkId      String
  email        String
  movieName    String
  movieId      String
  City         String
  Address      String
  ShowDate     DateTime
  ShowTime     String
  totalSeat    Int
  totalPaid    Float
  bookingDate  DateTime @default(now())
  seatNos      String[]
  orderId      String
  PaymentDone  Boolean

  @@index([clerkId])
  @@index([orderId])
  @@index([email])
}
